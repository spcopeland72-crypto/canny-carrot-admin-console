{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "app/**/*", "src/lib/**/*", "src/services/**/*", "src/types/**/*", "src/components/ui/**/*", "src/components/common/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "src/components/AdminBusinessesPage.tsx", "src/components/AdminCustomersPage.tsx", "src/components/EmailClientLayout.tsx", "src/components/EmailList.tsx", "src/components/EmailListItem.tsx", "src/components/EmailToolbar.tsx", "src/components/HomeScreen.tsx", "src/components/PageTemplate.tsx", "src/components/BottomNavigation.tsx"]
}
