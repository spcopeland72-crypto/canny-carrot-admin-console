{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "src/components/ui/**/*",
    "src/services/**/*",
    "src/types/**/*",
    "src/lib/**/*",
    "src/constants/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/components/Admin*.tsx",
    "src/components/BusinessForm.tsx",
    "src/components/CustomerForm.tsx",
    "src/components/PageTemplate.tsx",
    "src/components/HomeScreen.tsx",
    "src/components/ContentManagementPage.tsx",
    "src/components/BottomNavigation.tsx",
    "src/components/EmailClientLayout.tsx",
    "src/components/EmailClientListView.tsx",
    "src/components/EmailList.tsx",
    "src/components/EmailListItem.tsx",
    "src/components/EmailToolbar.tsx",
    "src/utils/**/*"
  ]
}





